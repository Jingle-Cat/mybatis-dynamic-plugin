<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="mysqlTable" targetRuntime="MyBatis3DynamicSql">
        <plugin type="com.github.uinios.mybatis.LombokPlugin">
            <property name="data" value="true"/>
            <property name="builder" value="true"/>
            <property name="noArgsConstructor" value="true"/>
            <property name="allArgsConstructor" value="true"/>
        </plugin>
        <plugin type="com.github.uinios.mybatis.DomainPlugin">
            <property name="serializable" value="true"/>
            <property name="dateSerialize" value="true"/>
        </plugin>
        <plugin type="com.github.uinios.mybatis.RepositoryPlugin">
            <property name="database" value="MySQL"/>
            <property name="repository" value="com.github.uinios.mybatis.repository.MybatisRepository"/>
        </plugin>
        <plugin type="com.github.uinios.mybatis.ServicePlugin">
            <property name="disable" value="true"/>
            <property name="targetProject" value="src/main/java"/>
            <property name="targetPackage" value="org.example.service"/>
            <property name="basicService" value="com.github.uinios.mybatis.service.BaseService"/>
            <property name="basicServiceImpl" value="com.github.uinios.mybatis.service.BaseServiceImpl"/>
        </plugin>
        <plugin type="com.github.uinios.mybatis.ControllerPlugin">
            <property name="disable" value="true"/>
            <property name="rest" value="true"/>
            <property name="targetProject" value="src/main/java"/>
            <property name="targetPackage" value="org.example.controller"/>
            <property name="basicController" value="com.github.uinios.mybatis.controller.BaseController"/>
        </plugin>
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/design"
                        userId="root"
                        password="123456"
        />
        <!--typeProcessing-->
        <javaTypeResolver>
            <!-- theTypeOfDatabaseColumnIsDECIMAL或NUMERIC，thenTheJavaTypeResolvesTo java.math.BigDecimal -->
            <property name="forceBigDecimals" value="true"/>
            <!--useJdk8DateType-->
            <property name="useJSR310Types" value="true"/>
        </javaTypeResolver>
        <!--entityClassGenerationConfiguration-->
        <javaModelGenerator targetPackage="org.example.domain" targetProject="src/main/java">
            <!--Generate another package based on the database schema, if multiple databases are changed to true, sub-directories-->
            <property name="enableSubPackages" value="false"/>
            <!--whetherTheStringTypeRemovesNullCharacters-->
            <!--<property name="trimStrings" value="true"/>-->
        </javaModelGenerator>
        <!--dataAccessGenerationConfiguration-->
        <javaClientGenerator targetPackage="org.example.repository" targetProject="src/main/java">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>
        <!--table-->
        <table tableName="sys_user" domainObjectName="User" mapperName="UserRepository">
            <generatedKey column="user_id" sqlStatement="select UUID()"/>
            <columnOverride column="enabled" javaType="boolean"
                            typeHandler="org.apache.ibatis.type.BooleanTypeHandler"/>
        </table>
    </context>
</generatorConfiguration>