<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="mysqlTable" targetRuntime="MyBatis3DynamicSql">
        <plugin type="com.github.uinios.mybatis.LombokPlugin">
            <property name="data" value="true"/>
            <property name="builder" value="true"/>
            <property name="noArgsConstructor" value="true"/>
            <property name="allArgsConstructor" value="true"/>
        </plugin>
        <plugin type="com.github.uinios.mybatis.DomainPlugin">
            <property name="serializable" value="true"/>
            <property name="dateSerialize" value="true"/>
        </plugin>
        <plugin type="com.github.uinios.mybatis.RepositoryPlugin">
            <property name="database" value="MySQL"/>
            <property name="repository" value="com.cn.design.plugin.basic.repository.MybatisRepository"/>
        </plugin>
        <plugin type="com.github.uinios.mybatis.ServicePlugin">
            <property name="disable" value="true"/>
            <property name="targetProject" value="src/main/java"/>
            <property name="targetPackage" value="com.cn.design.core.service"/>
            <property name="basicService" value="com.cn.design.plugin.basic.service.BaseService"/>
            <property name="basicServiceImpl" value="com.cn.design.plugin.basic.service.BaseServiceImpl"/>
        </plugin>
        <plugin type="com.github.uinios.mybatis.ControllerPlugin">
            <property name="disable" value="true"/>
            <property name="rest" value="true"/>
            <property name="targetProject" value="src/main/java"/>
            <property name="targetPackage" value="com.cn.design.core.controller"/>
            <property name="basicController" value="com.cn.design.plugin.basic.controller.BaseController"/>
        </plugin>
        <commentGenerator>
            <!-- 取消自动生成的注释 -->
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/design"
                        userId="root"
                        password="123456"
        />
        <!--类型处理-->
        <javaTypeResolver>
            <!-- 数据库列的类型为DECIMAL或NUMERIC，则Java类型解析为java.math.BigDecimal -->
            <property name="forceBigDecimals" value="true"/>
            <!--使用jdk8日期类型-->
            <property name="useJSR310Types" value="true"/>
        </javaTypeResolver>
        <!--实体类生成配置-->
        <javaModelGenerator targetPackage="com.cn.design.core.domain" targetProject="src/main/java">
            <!--根据数据库的schema再生成一层package,如果多个数据库改为true分目录-->
            <property name="enableSubPackages" value="false"/>
            <!--String类型是否去除空字符-->
            <!--<property name="trimStrings" value="true"/>-->
        </javaModelGenerator>
        <!--数据访问生成配置-->
        <javaClientGenerator targetPackage="com.cn.design.core.repository" targetProject="src/main/java">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>
        <!--表-->
        <table tableName="sys_user" domainObjectName="User" mapperName="UserRepository">
            <generatedKey column="user_id" sqlStatement="select UUID()"/>
            <columnOverride column="enabled" javaType="boolean"
                            typeHandler="org.apache.ibatis.type.BooleanTypeHandler"/>
        </table>
    </context>
</generatorConfiguration>